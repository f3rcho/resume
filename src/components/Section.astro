---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 40px;
    border-radius: 16px;
    background: #ffffff;
    box-shadow:
      20px 20px 60px #d9d9d9,
      -20px -20px 60px #ffffff;
    padding: 1rem;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
